<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253334"
    tools:context=".ActivityProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/logo_main"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.69" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_marginLeft="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toEndOf="@+id/logo_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />"
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Avatar1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="148dp"
        android:layout_centerHorizontal="true"
        android:onClick="profile"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Round" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="185dp"
        android:layout_height="124dp"
        android:background="#6AAE72"
        android:layout_marginStart="40dp"
        android:layout_marginTop="480dp"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="510dp"
        android:layout_marginStart="92dp"
        android:visibility="visible"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/Photozakat"
        android:layout_width="186dp"
        android:layout_height="121dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/picture_profile_1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TimeP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="401dp"
        android:layout_marginStart="50dp"
        android:text="11:50"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >


        <ImageButton
            android:id="@+id/meditation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/logo" />

        <ImageButton
            android:id="@+id/playlist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_playlist" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_marginStart="45dp"
            android:layout_marginTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile" />
    </LinearLayout>

</RelativeLayout>